<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:paddingLeft="@dimen/extended_padding"
    android:paddingRight="@dimen/extended_padding"
    android:background="@color/background_header"
    android:layout_height="150dp">

    <android.widget.Space
        android:layout_width="80dp"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="@dimen/extended_padding"
        android:paddingEnd="@dimen/extended_padding"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extended_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@android:color/white"
            android:id="@+id/textTittleHeader"
            android:maxLines="1"
            android:ellipsize="marquee"
            android:text="@string/title"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/textRatingHeader"
            android:background="@drawable/season_rating"
            android:padding="@dimen/extended_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/white"
            android:text="2.3"/>

    </LinearLayout>

</LinearLayout>